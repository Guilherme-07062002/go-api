{
    "swagger": "2.0",
    "info": {
        "description": "API para gerenciamento de álbums em Clean Architecture",
        "title": "Albums API",
        "contact": {},
        "version": "1.0"
    },
    "paths": {
        "/albums": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Álbuns"
                ],
                "summary": "Lista os álbuns cadastrados com paginação",
                "parameters": [
                    {
                        "minimum": 1,
                        "type": "integer",
                        "default": 1,
                        "description": "Número da página",
                        "name": "page",
                        "in": "query"
                    },
                    {
                        "maximum": 100,
                        "minimum": 1,
                        "type": "integer",
                        "default": 10,
                        "description": "Itens por página",
                        "name": "limit",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista paginada de álbuns",
                        "schema": {
                            "$ref": "#/definitions/dtos.PaginatedResponse-entities_Album"
                        }
                    }
                }
            },
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "tags": [
                    "Álbuns"
                ],
                "summary": "Cria um novo álbum",
                "parameters": [
                    {
                        "description": "Dados do álbum que será criado",
                        "name": "album",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/dtos.CreateAlbumDto"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Álbum criado com sucesso",
                        "schema": {
                            "$ref": "#/definitions/entities.Album"
                        }
                    }
                }
            }
        },
        "/albums/{id}": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Álbuns"
                ],
                "summary": "Busca um álbum pelo seu ID",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID do álbum que será buscado",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Álbum encontrado",
                        "schema": {
                            "$ref": "#/definitions/entities.Album"
                        }
                    }
                }
            },
            "put": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Álbuns"
                ],
                "summary": "Atualiza um álbum",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID do álbum que será atualizado",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Informações do álbum que serão atualizadas",
                        "name": "album",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/dtos.UpdateAlbumDto"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Álbum atualizado com sucesso",
                        "schema": {
                            "$ref": "#/definitions/entities.Album"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "dtos.CreateAlbumDto": {
            "type": "object",
            "required": [
                "artist",
                "price",
                "title"
            ],
            "properties": {
                "artist": {
                    "type": "string",
                    "example": "John Coltran"
                },
                "price": {
                    "type": "number",
                    "example": 56.99
                },
                "title": {
                    "type": "string",
                    "minLength": 3,
                    "example": "Blue Train"
                }
            }
        },
        "dtos.PaginatedResponse-entities_Album": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/entities.Album"
                    }
                },
                "limit": {
                    "type": "integer"
                },
                "page": {
                    "type": "integer"
                },
                "total": {
                    "type": "integer"
                },
                "total_pages": {
                    "type": "integer"
                }
            }
        },
        "dtos.UpdateAlbumDto": {
            "type": "object",
            "properties": {
                "artist": {
                    "type": "string",
                    "example": "John Coltran"
                },
                "price": {
                    "type": "number",
                    "minimum": 0,
                    "example": 56.99
                },
                "title": {
                    "type": "string",
                    "minLength": 3,
                    "example": "Blue Train"
                }
            }
        },
        "entities.Album": {
            "type": "object",
            "properties": {
                "artist": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "price": {
                    "type": "number"
                },
                "title": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "description": "Digite: Bearer {token}",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}